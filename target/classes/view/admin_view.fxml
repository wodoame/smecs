<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.AdminController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TabPane VBox.vgrow="ALWAYS">
        <!-- Products Tab -->
        <Tab text="Products" closable="false">
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name"/>
                            <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category"/>
                            <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price"/>
                        </columns>
                    </TableView>
                </VBox>
                <VBox spacing="10.0" prefWidth="300.0">
                    <Label style="-fx-font-weight: bold;" text="Product Details"/>
                    <GridPane hgap="5.0" vgap="5.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Name:"/>
                        <TextField fx:id="nameField" GridPane.columnIndex="1"/>
                        <Label text="Category:" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="categoryComboBox" prefWidth="150.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"/>
                        <Label text="Price:" GridPane.rowIndex="2"/>
                        <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label text="Description:" GridPane.rowIndex="3"/>
                        <TextArea fx:id="descriptionArea" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="3"/>
                    </GridPane>
                    <HBox alignment="CENTER" spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#handleAdd" text="Add"/>
                        <Button mnemonicParsing="false" onAction="#handleUpdate" text="Update"/>
                        <Button mnemonicParsing="false" onAction="#handleDelete" text="Delete"/>
                    </HBox>
                    <Button mnemonicParsing="false" onAction="#handleClear" text="Clear Form" maxWidth="Infinity"/>
                </VBox>
            </HBox>
        </Tab>

        <!-- Categories Tab -->
        <Tab text="Categories" closable="false">
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="catIdColumn" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="catNameColumn" prefWidth="150.0" text="Name"/>
                            <TableColumn fx:id="catDescColumn" prefWidth="250.0" text="Description"/>
                        </columns>
                    </TableView>
                </VBox>
                <VBox spacing="10.0" prefWidth="300.0">
                    <Label style="-fx-font-weight: bold;" text="Category Details"/>
                    <GridPane hgap="5.0" vgap="5.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="Name:"/>
                        <TextField fx:id="categoryNameField" GridPane.columnIndex="1"/>
                        <Label text="Description:" GridPane.rowIndex="1"/>
                        <TextArea fx:id="categoryDescArea" prefHeight="100.0" prefWidth="200.0"
                                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>
                    <HBox alignment="CENTER" spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#handleAddCategory" text="Add"/>
                        <Button mnemonicParsing="false" onAction="#handleUpdateCategory" text="Update"/>
                        <Button mnemonicParsing="false" onAction="#handleDeleteCategory" text="Delete"/>
                    </HBox>
                    <Button mnemonicParsing="false" onAction="#handleClearCategory" text="Clear Form" maxWidth="Infinity"/>
                </VBox>
            </HBox>
        </Tab>
    </TabPane>
</VBox>
