<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.LoginController"
      style="-fx-background-color: #f5f5f5;">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>

   <!-- Title -->
   <Label text="Welcome Back!" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
      </Label>

      <Label text="Login to Smart E-Commerce System" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;">
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
      </Label>

      <Separator />

      <!-- Username/Email Field -->
      <Label text="Username or Email" style="-fx-font-weight: bold; -fx-font-size: 13px;">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="usernameField" promptText="Enter username or email"
                 maxWidth="300.0" />

      <!-- Password Field -->
      <Label text="Password" style="-fx-font-weight: bold; -fx-font-size: 13px;">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="passwordField" promptText="Enter password"
                     maxWidth="300.0" />

      <!-- Message Label -->
      <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER" maxWidth="300.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>

      <!-- Login Button -->
      <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
              styleClass="button-primary"
              maxWidth="300.0" defaultButton="true">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Button>

      <!-- Register Link -->
      <Separator>
         <VBox.margin>
            <Insets top="25.0" bottom="10.0" />
         </VBox.margin>
      </Separator>

      <Label text="Don't have an account?" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />

      <Hyperlink fx:id="registerLink" text="Create a new account" onAction="#handleRegisterLink"
                 style="-fx-text-fill: #27ae60; -fx-font-size: 13px; -fx-font-weight: bold;">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Hyperlink>
</VBox>

