<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.InventoryFormController" spacing="15.0" stylesheets="@../css/styles.css"
      style="-fx-background-color: white; -fx-padding: 20;" prefWidth="450.0">

    <Label fx:id="titleLabel" text="Inventory Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox spacing="5.0">
        <Label text="Product:" styleClass="form-label"/>
        <ComboBox fx:id="productComboBox" prefWidth="300.0" promptText="Select Product"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Quantity:" styleClass="form-label"/>
        <TextField fx:id="quantityField" promptText="Enter quantity"/>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" styleClass="button-secondary"/>
        <Button mnemonicParsing="false" onAction="#handleSave" text="Save" styleClass="button-primary"/>
    </HBox>

</VBox>

