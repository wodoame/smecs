<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.ProductFormController" spacing="15.0" stylesheets="@../css/styles.css"
      style="-fx-background-color: white; -fx-padding: 20;" prefWidth="600.0" prefHeight="500.0">

    <Label fx:id="titleLabel" text="Product Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox spacing="5.0">
        <Label text="Name:" styleClass="form-label"/>
        <TextField fx:id="nameField" promptText="Enter Product Name"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Category:" styleClass="form-label"/>
        <ComboBox fx:id="categoryComboBox" prefWidth="300.0" promptText="Select Category"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Price:" styleClass="form-label"/>
        <TextField fx:id="priceField" promptText="0.00"/>
    </VBox>

    <VBox spacing="5.0" fx:id="quantityBox">
        <Label text="Stock Quantity:" styleClass="form-label"/>
        <TextField fx:id="quantityField" promptText="0"/>
    </VBox>

    <VBox spacing="5.0" VBox.vgrow="ALWAYS">
        <Label text="Description:" styleClass="form-label"/>
        <TextArea fx:id="descriptionArea" prefHeight="100.0" prefWidth="300.0" wrapText="true"/>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" styleClass="button-secondary"/>
        <Button mnemonicParsing="false" onAction="#handleSave" text="Save" styleClass="button-primary"/>
    </HBox>

</VBox>

