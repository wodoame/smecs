<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.AllReviewsController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label fx:id="headerLabel" text="All Reviews">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
        <Button mnemonicParsing="false" onAction="#handleRefresh" text="Refresh" styleClass="button-secondary"/>
        <Button mnemonicParsing="false" onAction="#handleAddReview" text="Add Review" styleClass="button-primary"/>
    </HBox>

    <TableView fx:id="reviewsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="productColumn" prefWidth="150.0" text="Product"/>
            <TableColumn fx:id="userColumn" prefWidth="100.0" text="User"/>
            <TableColumn fx:id="ratingColumn" prefWidth="60.0" text="Rating"/>
            <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title"/>
            <TableColumn fx:id="reviewColumn" prefWidth="300.0" text="Review"/>
            <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date"/>
        </columns>
    </TableView>
</VBox>
