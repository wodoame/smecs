# SMECS Environment Configuration
# Copy this file to .env and fill in your actual values
# These environment variables must be set before running the application

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smecs
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# MongoDB Configuration (Optional)
# Leave empty or comment out to disable MongoDB features
# Example: MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=AppName
MONGODB_URI=
MONGODB_DATABASE=smecs

# Application Configuration
LOG_LEVEL=INFO
REPORT_MONITORING_ENABLED=true

