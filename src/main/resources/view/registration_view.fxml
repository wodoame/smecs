<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.RegistrationController"
      stylesheets="@../css/styles.css">
   <padding>
      <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
   </padding>

   <!-- Title -->
   <Label text="Create Account" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </Label>

   <Label text="Join Smart E-Commerce System" style="-fx-text-fill: #7f8c8d;">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
   </Label>

   <Separator />

   <!-- Username Field -->
   <Label text="Username" style="-fx-font-weight: bold;">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Label>
   <TextField fx:id="usernameField" promptText="Enter username"
              maxWidth="300.0" />

   <!-- Email Field -->
   <Label text="Email" style="-fx-font-weight: bold;">
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin>
   </Label>
   <TextField fx:id="emailField" promptText="Enter email address"
              maxWidth="300.0" />

   <!-- Password Field -->
   <Label text="Password" style="-fx-font-weight: bold;">
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin>
   </Label>
   <PasswordField fx:id="passwordField" promptText="Enter password"
                  maxWidth="300.0" />

   <!-- Confirm Password Field -->
   <Label text="Confirm Password" style="-fx-font-weight: bold;">
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin>
   </Label>
   <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"
                  maxWidth="300.0" />

   <!-- Admin Role CheckBox -->
   <CheckBox fx:id="adminCheckBox" text="Register as Admin"
                                  maxWidth="300.0">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </CheckBox>

   <!-- Message Label -->
   <Label fx:id="messageLabel" wrapText="true" textAlignment="CENTER" maxWidth="300.0">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Label>

   <!-- Register Button -->
   <Button fx:id="registerButton" text="Create Account" onAction="#handleRegister"
           styleClass="button-success"
           maxWidth="300.0">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Button>

   <!-- Back to Login Link -->
   <Hyperlink fx:id="loginLink" text="Already have an account? Login here" onAction="#handleBackToLogin"
              style="-fx-text-fill: #3498db;">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </Hyperlink>
</VBox>
