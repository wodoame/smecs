<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.ReviewController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="headerLabel" text="Write a Review">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Label>

    <VBox fx:id="productSelectionBox" spacing="5.0" managed="false" visible="false">
        <Label text="Select Product"/>
        <ComboBox fx:id="productComboBox" prefWidth="250.0" promptText="Choose a product..."/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Rating"/>
        <ComboBox fx:id="ratingComboBox" prefWidth="150.0"/>
    </VBox>

    <VBox spacing="5.0">
        <Label text="Title"/>
        <TextField fx:id="titleField" promptText="Sum up your experience in one line"/>
    </VBox>

    <VBox spacing="5.0" VBox.vgrow="ALWAYS">
        <Label text="Review"/>
        <TextArea fx:id="reviewArea" prefHeight="150.0" prefWidth="400.0" promptText="Tell us what you liked or disliked..." wrapText="true"/>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" styleClass="button-secondary"/>
        <Button defaultButton="true" mnemonicParsing="false" onAction="#handleSubmit" text="Submit Review" styleClass="button-primary"/>
    </HBox>

    <Label fx:id="errorLabel" textFill="RED" visible="false"/>

</VBox>
