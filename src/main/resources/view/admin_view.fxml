<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.AdminController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TabPane VBox.vgrow="ALWAYS">
        <!-- Products Tab -->
        <Tab text="Products" closable="false">
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name"/>
                            <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category"/>
                            <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price"/>
                        </columns>
                    </TableView>
                </VBox>
                <VBox spacing="10.0" prefWidth="300.0">
                    <Label style="-fx-font-weight: bold;" text="Product Details"/>

                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label text="Name:" styleClass="form-label"/>
                            <TextField fx:id="nameField" promptText="Enter Product Name"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Category:" styleClass="form-label"/>
                            <ComboBox fx:id="categoryComboBox" prefWidth="300.0" promptText="Select Category"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Price:" styleClass="form-label"/>
                            <TextField fx:id="priceField" promptText="0.00"/>
                        </VBox>

                        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                            <Label text="Description:" styleClass="form-label"/>
                            <TextArea fx:id="descriptionArea" prefHeight="100.0" prefWidth="300.0" wrapText="true"/>
                        </VBox>
                    </VBox>

                    <HBox alignment="CENTER" spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#handleAdd" text="Add" styleClass="button-success"/>
                        <Button mnemonicParsing="false" onAction="#handleUpdate" text="Update" styleClass="button-primary"/>
                        <Button mnemonicParsing="false" onAction="#handleDelete" text="Delete" styleClass="button-danger"/>
                    </HBox>
                    <Button mnemonicParsing="false" onAction="#handleClear" text="Clear Form" maxWidth="Infinity" styleClass="button-secondary"/>
                </VBox>
            </HBox>
        </Tab>

        <!-- Categories Tab -->
        <Tab text="Categories" closable="false">
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="catIdColumn" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="catNameColumn" prefWidth="150.0" text="Name"/>
                            <TableColumn fx:id="catDescColumn" prefWidth="250.0" text="Description"/>
                        </columns>
                    </TableView>
                </VBox>
                <VBox spacing="10.0" prefWidth="300.0">
                    <Label style="-fx-font-weight: bold;" text="Category Details"/>

                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label text="Name:" styleClass="form-label"/>
                            <TextField fx:id="categoryNameField" promptText="Enter Category Name"/>
                        </VBox>

                        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                            <Label text="Description:" styleClass="form-label"/>
                            <TextArea fx:id="categoryDescArea" prefHeight="100.0" prefWidth="300.0" wrapText="true"/>
                        </VBox>
                    </VBox>

                    <HBox alignment="CENTER" spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#handleAddCategory" text="Add" styleClass="button-success"/>
                        <Button mnemonicParsing="false" onAction="#handleUpdateCategory" text="Update" styleClass="button-primary"/>
                        <Button mnemonicParsing="false" onAction="#handleDeleteCategory" text="Delete" styleClass="button-danger"/>
                    </HBox>
                    <Button mnemonicParsing="false" onAction="#handleClearCategory" text="Clear Form" maxWidth="Infinity" styleClass="button-secondary"/>
                </VBox>
            </HBox>
        </Tab>
    </TabPane>
</VBox>
