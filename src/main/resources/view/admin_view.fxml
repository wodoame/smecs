<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.AdminController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <TabPane VBox.vgrow="ALWAYS">
        <!-- Products Tab -->
        <Tab text="Products" closable="false">
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name"/>
                            <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category"/>
                            <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Price"/>
                            <TableColumn fx:id="stockColumn" prefWidth="100.0" text="Stock"/>
                        </columns>
                    </TableView>
                </VBox>
                <VBox spacing="10.0" prefWidth="300.0">
                    <Label style="-fx-font-weight: bold;" text="Product Details"/>

                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label text="Name:" styleClass="form-label"/>
                            <TextField fx:id="nameField" promptText="Enter Product Name"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Category:" styleClass="form-label"/>
                            <ComboBox fx:id="categoryComboBox" prefWidth="300.0" promptText="Select Category"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Price:" styleClass="form-label"/>
                            <TextField fx:id="priceField" promptText="0.00"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Quantity in Stock:" styleClass="form-label"/>
                            <TextField fx:id="productQuantityField" promptText="0"/>
                        </VBox>

                        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                            <Label text="Description:" styleClass="form-label"/>
                            <TextArea fx:id="descriptionArea" prefHeight="100.0" prefWidth="300.0" wrapText="true"/>
                        </VBox>
                    </VBox>

                    <HBox alignment="CENTER" spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#handleAdd" styleClass="button-success">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Add Product"/>
                             </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleUpdate" styleClass="button-primary">
                            <graphic>
                                <javafx.scene.shape.SVGPath content="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" fill="WHITE"/>
                            </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Update Product"/>
                             </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleDelete" styleClass="button-danger">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Delete Product"/>
                             </tooltip>
                        </Button>
                    </HBox>
                    <Button mnemonicParsing="false" onAction="#handleClear" maxWidth="Infinity" styleClass="button-secondary">
                        <graphic>
                                <javafx.scene.shape.SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" fill="WHITE"/>
                        </graphic>
                         <tooltip>
                                <javafx.scene.control.Tooltip text="Clear Form"/>
                         </tooltip>
                    </Button>
                </VBox>
            </HBox>
        </Tab>

        <!-- Categories Tab -->
        <Tab text="Categories" closable="false">
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="catIdColumn" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="catNameColumn" prefWidth="150.0" text="Name"/>
                            <TableColumn fx:id="catDescColumn" prefWidth="250.0" text="Description"/>
                        </columns>
                    </TableView>
                </VBox>
                <VBox spacing="10.0" prefWidth="300.0">
                    <Label style="-fx-font-weight: bold;" text="Category Details"/>

                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label text="Name:" styleClass="form-label"/>
                            <TextField fx:id="categoryNameField" promptText="Enter Category Name"/>
                        </VBox>

                        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                            <Label text="Description:" styleClass="form-label"/>
                            <TextArea fx:id="categoryDescArea" prefHeight="100.0" prefWidth="300.0" wrapText="true"/>
                        </VBox>
                    </VBox>

                    <HBox alignment="CENTER" spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#handleAddCategory" styleClass="button-success">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Add Category"/>
                             </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleUpdateCategory" styleClass="button-primary">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Update Category"/>
                             </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleDeleteCategory" styleClass="button-danger">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Delete Category"/>
                             </tooltip>
                        </Button>
                    </HBox>
                    <Button mnemonicParsing="false" onAction="#handleClearCategory" maxWidth="Infinity" styleClass="button-secondary">
                        <graphic>
                                <javafx.scene.shape.SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" fill="WHITE"/>
                        </graphic>
                         <tooltip>
                                <javafx.scene.control.Tooltip text="Clear Form"/>
                         </tooltip>
                    </Button>
                </VBox>
            </HBox>
        </Tab>

        <!-- Inventory Tab -->
        <Tab text="Inventory" closable="false">
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="invIdColumn" prefWidth="50.0" text="ID"/>
                            <TableColumn fx:id="invProductColumn" prefWidth="200.0" text="Product"/>
                            <TableColumn fx:id="invQuantityColumn" prefWidth="100.0" text="Quantity"/>
                            <TableColumn fx:id="invStatusColumn" prefWidth="100.0" text="Status"/>
                        </columns>
                    </TableView>
                </VBox>
                <VBox spacing="10.0" prefWidth="300.0">
                    <Label style="-fx-font-weight: bold;" text="Inventory Details"/>

                    <VBox spacing="15.0">
                        <VBox spacing="5.0">
                            <Label text="Product:" styleClass="form-label"/>
                            <ComboBox fx:id="inventoryProductComboBox" prefWidth="300.0" promptText="Select Product"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Quantity:" styleClass="form-label"/>
                            <TextField fx:id="quantityField" promptText="Enter quantity"/>
                        </VBox>
                    </VBox>

                    <HBox alignment="CENTER" spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#handleAddInventory" styleClass="button-success">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Add Inventory Item"/>
                             </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleUpdateInventory" styleClass="button-primary">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Update Inventory Item"/>
                             </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleDeleteInventory" styleClass="button-danger">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Delete Inventory Item"/>
                             </tooltip>
                        </Button>
                    </HBox>
                    <Button mnemonicParsing="false" onAction="#handleClearInventory" maxWidth="Infinity" styleClass="button-secondary">
                        <graphic>
                                <javafx.scene.shape.SVGPath content="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" fill="WHITE"/>
                        </graphic>
                         <tooltip>
                                <javafx.scene.control.Tooltip text="Clear Form"/>
                         </tooltip>
                    </Button>

                    <Label style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;" text="Quick Actions"/>
                    <HBox spacing="10.0">
                        <Button mnemonicParsing="false" onAction="#handleShowLowStock" styleClass="button-primary">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Show Low Stock"/>
                             </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleShowAllInventory" styleClass="button-secondary">
                             <graphic>
                                <javafx.scene.shape.SVGPath content="M3 13h2v-2H3v2zm0 4h2v-2H3v2zm0-8h2V7H3v2zm4 4h14v-2H7v2zm0 4h14v-2H7v2zM7 7v2h14V7H7z" fill="WHITE"/>
                             </graphic>
                             <tooltip>
                                <javafx.scene.control.Tooltip text="Show All Inventory"/>
                             </tooltip>
                        </Button>
                    </HBox>
                </VBox>
            </HBox>
        </Tab>
    </TabPane>
</VBox>
