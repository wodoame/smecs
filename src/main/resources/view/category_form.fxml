<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.smecs.controller.CategoryFormController" spacing="15.0" stylesheets="@../css/styles.css"
      style="-fx-background-color: white; -fx-padding: 20;" prefWidth="400.0">

    <Label fx:id="titleLabel" text="Category Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <VBox spacing="5.0">
        <Label text="Name:" styleClass="form-label"/>
        <TextField fx:id="categoryNameField" promptText="Enter Category Name"/>
    </VBox>

    <VBox spacing="5.0" VBox.vgrow="ALWAYS">
        <Label text="Description:" styleClass="form-label"/>
        <TextArea fx:id="categoryDescArea" prefHeight="100.0" prefWidth="300.0" wrapText="true"/>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" styleClass="button-secondary"/>
        <Button mnemonicParsing="false" onAction="#handleSave" text="Save" styleClass="button-primary"/>
    </HBox>

</VBox>

